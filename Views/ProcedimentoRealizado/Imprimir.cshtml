@model ProjetoFinalCaroline.Models.ProcedimentoRealizado
@{
    Layout = null;
}
<link href="~/css/imprimir.css" rel="stylesheet" />
    <header>
    <div class="header-logo">
        <img src="~/img/LabVida-logo-Imprimir.png" alt="">
    </div>
    <div class="header-titulo">
        <h1 class="titulo">LabVida Diagnósticos</h1>
    </div>        
    </header>
    <main>
        <div class="informacao">            
            <div>
                <h3>NOME DO CLIENTE: @Html.DisplayFor(model => model.Cliente.ClienteNome)</h3>
                <h3>SEXO: @Html.DisplayFor(model => model.Cliente.ClienteSexo)</h3>
            </div>
            <div>
                <h3>COLABORADOR:@Html.DisplayFor(model => model.Colaborador.ColaboradorNome)</h3>
                <h3>CLÍNICA: LabVida Diagnósticos</h3>
            </div>            
        </div> 
        <div class="exame">
            <div class="">
                <h2>PROCEDIMENTO: @Html.DisplayFor(model => model.Procedimento.ProcedimentoNome)</h2>
                <h4>OBSERVAÇÃO DO PROCEDIMENTO: @Html.DisplayFor(model => model.Procedimento.ProcedimentoObservacao)</h4>
                    </div>
            <div class="">
                <h4>PROFISSIONAL: @Html.DisplayFor(model => model.Colaborador.TipoColaborador)</h4>
                <h4>DATA DA COLETA: @Html.DisplayNameFor(model => model.DataRealizacao)</h4>
            </div>
        </div>  
        <div class="resultado">
            <h3>RESULTADO OBSERVADO:</h3>
            <h3>@Html.DisplayFor(model => model.ObservacaoRealizacao)</h3>
        </div>
        <hr>
        <div class="rodape">
            <h4>METODOLOGIA: JAFFÉ AUTOMATIZADO</h4>
        </div>  
    </main>
