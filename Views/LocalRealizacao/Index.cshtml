@model IEnumerable<ProjetoFinalCaroline.Models.LocalRealizacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Local de Realização</h1>

<p>
    <a class="btncriar" asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocalNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocalNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade.CidadeNome)
            </td>
            <td>
                <a class="a botao" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="a botao" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a class="a botao" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
